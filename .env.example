# WorkClock Environment Configuration
#
# Copy this file to .env for production deployment

# PostgreSQL Database
POSTGRES_DB=workclock
POSTGRES_USER=workclock
POSTGRES_PASSWORD=change_this_secure_password

# Backend Configuration  
DATABASE_URL=postgresql+asyncpg://workclock:change_this_secure_password@postgres/workclock
SECRET_KEY=change_this_to_random_32_chars
BACKEND_CORS_ORIGINS=["https://your-domain.com"]

# Commands (production mode)
BACKEND_COMMAND=uvicorn app.main:app --host 0.0.0.0 --port 8000
FRONTEND_COMMAND=npm run build

# API URL for frontend
VITE_API_URL=https://your-domain.com/api

# Enable production profile (nginx)
COMPOSE_PROFILES=production
